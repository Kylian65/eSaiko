CREATE TABLE llx_elaska_veille_financements (
    rowid INT PRIMARY KEY AUTO_INCREMENT,
    
    -- IDENTIFICATION FINANCEMENT
    nom_dispositif VARCHAR(255),
    organisme_financeur VARCHAR(100),
    type_financeur ENUM(
        'etat', 'region_occitanie', 'departement_65', 'commune_tarbes',
        'europe', 'fondation_privee', 'entreprise', 'autre'
    ),
    
    -- √âLIGIBILIT√â
    secteurs_eligibles JSON, -- Culturel, sportif, social, etc.
    types_projets JSON, -- Fonctionnement, investissement, action
    territoires_eligibles JSON, -- Tarbes, Hautes-Pyr√©n√©es, Occitanie
    taille_association_min INT, -- Effectif minimum
    ca_max_eligibilite DECIMAL(10,2),
    
    -- CALENDRIER
    type_appel ENUM('permanent', 'session', 'annuel'),
    date_ouverture DATE,
    date_limite_depot DATE,
    frequence_sessions VARCHAR(50),
    
    -- MONTANTS
    montant_min DECIMAL(8,2),
    montant_max DECIMAL(8,2),
    taux_financement_max DECIMAL(5,2), -- Pourcentage du projet
    
    -- SP√âCIFICIT√âS LOCALES
    specificite_occitanie TEXT,
    contact_local VARCHAR(255),
    
    -- SUIVI
    statut_dispositif ENUM('actif', 'suspendu', 'clos'),
    derniere_maj DATE,
    
    INDEX idx_type_financeur (type_financeur),
    INDEX idx_secteur (secteurs_eligibles(255)),
    INDEX idx_territoire (territoires_eligibles(255))
);
3.2 Dossiers de Financement
üìä Module Dossiers Subventions

SQL
CREATE TABLE llx_elaska_dossier_subvention (
    rowid INT PRIMARY KEY AUTO_INCREMENT,
    fk_soc INT NOT NULL, -- Association demandeuse
    ref_elaska VARCHAR(50),
    
    -- FINANCEMENT VIS√â
    fk_dispositif_financement INT,
    organisme_financeur VARCHAR(100),
    nom_dispositif VARCHAR(255),
    
    -- PROJET FINANC√â
    intitule_projet TEXT,
    description_projet TEXT,
    objectifs_projet JSON,
    public_beneficiaire TEXT,
    territoire_realisation VARCHAR(100),
    
    -- CALENDRIER PROJET
    date_debut_projet DATE,
    date_fin_projet DATE,
    duree_mois INT,
    
    -- BUDGET PROJET
    cout_total_projet DECIMAL(10,2),
    montant_demande DECIMAL(10,2),
    part_autofinancement DECIMAL(10,2),
    autres_financements JSON, -- Autres co-financeurs
    
    -- BUDGET D√âTAILL√â
    budget_personnel DECIMAL(8,2),
    budget_fonctionnement DECIMAL(8,2),
    budget_investissement DECIMAL(8,2),
    budget_communication DECIMAL(8,2),
    
    -- INDICATEURS
    nb_beneficiaires_prevus INT,
    indicateurs_impact JSON,
    
    -- SUIVI ADMINISTRATIF
    cahier_charges_analyse BOOLEAN DEFAULT FALSE,
    argumentaire_redige BOOLEAN DEFAULT FALSE,
    budget_valide BOOLEAN DEFAULT FALSE,
    pieces_administratives_ok BOOLEAN DEFAULT FALSE,
    
    -- D√âP√îT ET SUIVI
    date_depot DATE,
    mode_depot ENUM('en_ligne', 'courrier', 'main_propre'),
    accuse_reception BOOLEAN DEFAULT FALSE,
    
    -- D√âCISION
    date_commission DATE,
    decision ENUM('en_attente', 'accorde', 'accorde_partiel', 'refuse', 'reporte'),
    montant_accorde DECIMAL(10,2),
    conditions_attribution TEXT,
    
    -- VERSEMENTS
    modalites_versement JSON,
    acompte_verse DECIMAL(8,2),
    date_premier_versement DATE,
    solde_a_percevoir DECIMAL(8,2),
    
    -- BILAN D'ACTION
    bilan_qualitatif_rendu BOOLEAN DEFAULT FALSE,
    bilan_financier_rendu BOOLEAN DEFAULT FALSE,
    date_rendu_bilan DATE,
    
    FOREIGN KEY (fk_soc) REFERENCES llx_societe(rowid),
    INDEX idx_statut (decision),
    INDEX idx_organisme (organisme_financeur)
);

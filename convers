3. KPIs Sp√©cifiques Associations
SQL
CREATE VIEW v_elaska_kpi_associations AS
SELECT 
    COUNT(*) as nb_associations_clientes,
    AVG(CASE WHEN statut_creation = 'creee' THEN 1 ELSE 0 END) as taux_creation_reussie,
    SUM(subventions_obtenues.montant_total) as subventions_totales_obtenues,
    AVG(satisfaction_accompagnement.note) as satisfaction_moyenne,
    COUNT(CASE WHEN instances.ag_a_jour = 1 THEN 1 END) as associations_conformes_ag
FROM llx_societe s
JOIN llx_elaska_projet_associatif p ON s.rowid = p.fk_soc
LEFT JOIN subventions_obtenues ON s.rowid = subventions_obtenues.fk_soc
LEFT JOIN satisfaction_accompagnement ON s.rowid = satisfaction_accompagnement.fk_soc
LEFT JOIN instances ON s.rowid = instances.fk_soc
WHERE s.type_client = 'association';

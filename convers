CREATE TABLE llx_elaska_analyse_risques_assurance (
    rowid INT PRIMARY KEY AUTO_INCREMENT,
    fk_soc INT NOT NULL,
    date_analyse DATE,
    
    -- PROFIL ASSUR√â
    age_assure_principal INT,
    profession VARCHAR(100),
    situation_familiale VARCHAR(50),
    revenus_annuels DECIMAL(10,2),
    

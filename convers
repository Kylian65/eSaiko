2.2 Gestion des Membres
üë®‚Äçüë©‚Äçüëß‚Äçüë¶ Module Membres & B√©n√©voles

SQL
CREATE TABLE llx_elaska_membres_association (
    rowid INT PRIMARY KEY AUTO_INCREMENT,
    fk_soc INT NOT NULL, -- Association
    
    -- IDENTIT√â MEMBRE
    civilite ENUM('M', 'Mme', 'Autre'),
    nom VARCHAR(100),
    prenom VARCHAR(100),
    email VARCHAR(100),
    telephone VARCHAR(20),
    adresse TEXT,
    
    -- ADH√âSION
    type_membre ENUM('actif', 'bienfaiteur', 'honneur', 'fondateur'),
    date_premiere_adhesion DATE,
    date_derniere_adhesion DATE,
    cotisation_a_jour BOOLEAN DEFAULT FALSE,
    montant_cotisation DECIMAL(6,2),
    
    -- B√âN√âVOLAT
    benevolat_actif BOOLEAN DEFAULT FALSE,
    competences JSON, -- Comp√©tences propos√©es
    disponibilites JSON, -- Cr√©neaux horaires
    formations_suivies JSON,
    
    -- ENGAGEMENTS
    responsabilites JSON, -- Postes occup√©s
    participations_instances JSON, -- AG, CA particip√©es
    
    -- COMMUNICATION
    accepte_newsletter BOOLEAN DEFAULT TRUE,
    accepte_relances BOOLEAN DEFAULT TRUE,
    preferences_contact ENUM('email', 'telephone', 'courrier'),
    
    -- RGPD
    consentement_donnees DATE,
    droit_opposition BOOLEAN DEFAULT FALSE,
    
    INDEX idx_association (fk_soc),
    INDEX idx_cotisation (cotisation_a_jour),
    FOREIGN KEY (fk_soc) REFERENCES llx_societe(rowid)
);

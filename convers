      <header>
        <h1>Mes Financements</h1>
        <StatsFinancements 
          total_demande={stats.total_demande}
          total_obtenu={stats.total_obtenu}
          taux_reussite={stats.taux_reussite}
        />
      </header>
      
      <div className="sections-financement">
        <section className="dossiers-en-cours">
          <h2>Dossiers en Cours</h2>
          <DossiersList 
            dossiers={dossiers.en_cours}
            showProgress={true}
          />
        </section>
        
        <section className="opportunites">
          <h2>Nouvelles Opportunit√©s</h2>
          <OpportunitesCard 
            opportunites={opportunites}
            filtres={['secteur', 'territoire', 'montant']}
          />
        </section>
        
        <section className="obtenus">
          <h2>Financements Obtenus</h2>
          <FinancementsObtenus 
            dossiers={dossiers.obtenus}
            showVersements={true}
          />
        </section>
      </div>
      
      <CalendrierEcheances />
    </div>
  );
};

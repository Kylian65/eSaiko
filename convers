SQL
CREATE TABLE llx_elaska_projet_associatif (
    rowid INT PRIMARY KEY AUTO_INCREMENT,
    ref_elaska VARCHAR(50),
    
    -- IDENTIFICATION
    denomination_envisagee VARCHAR(255),
    secteur_activite ENUM(
        'culturel', 'sportif', 'social', 'educatif', 'environnemental',
        'humanitaire', 'religieux', 'professionnel', 'autre'
    ),
    territoire_action VARCHAR(100), -- Tarbes, Occitanie, National, International
    
    -- D√âFINITION DU PROJET
    objet_social TEXT, -- Raison d'√™tre principale
    buts_concrets JSON, -- Objectifs pr√©cis
    public_cible TEXT, -- B√©n√©ficiaires vis√©s
    valeurs_fondamentales JSON, -- Principes directeurs
    activites_envisagees JSON, -- Types d'actions pr√©vues
    
    -- FONDATEURS
    nb_membres_fondateurs INT,
    fondateurs_info JSON, -- Nom, r√¥le, comp√©tences
    
    -- MATURIT√â DU PROJET
    etape_reflexion ENUM(
        'idee_initiale', 'reflexion_approfondie', 'projet_defini',
        'statuts_en_cours', 'pret_creation'
    ),
    points_a_clarifier TEXT,
    
    -- MOYENS ENVISAG√âS
    budget_previsionnel_annuel DECIMAL(10,2),
    besoins_locaux TEXT,
    besoins_humains TEXT,
    besoins_materiels TEXT,
    
    -- CONSEILLER
    fk_user_accompagnant INT,
    date_debut_accompagnement DATE,
    
    INDEX idx_etape (etape_reflexion)
);
